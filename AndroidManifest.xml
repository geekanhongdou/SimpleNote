<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="simplenote.ui"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="simplenote.ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="simplenote.ui.InitialActivity"
            android:label="@string/title_activity_initial" >
        </activity>
        <activity
            android:name="simplenote.ui.SectionGroupActivity"
            android:label="@string/title_activity_section_group" >
        </activity>
        <activity
            android:name="simplenote.ui.SectionActivity"
            android:label="@string/title_activity_section" >
        </activity>
        <activity
            android:name="simplenote.ui.EditorActivity"
            android:label="@string/title_activity_editor" >
        </activity>
    </application>

</manifest>